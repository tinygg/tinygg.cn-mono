@{
    Layout = "~/Views/Shared/DefaultLayoutPage.cshtml";
}

@section TitleContent {@ViewData["title"]}

@section CanonicalContent {@ViewData["canonical_url"]}


@{
    mono_blog.Models.Post post = ViewData["post"] as mono_blog.Models.Post;

}
<div id="content">
    <div class="post post-text clearfix">
        <div class="post-meta">
            <a class="post-date" href="@post.url">
                <span class="post-date-month">@post.month</span>
                <span class="post-date-day">@post.day</span>
                <span class="post-date-year">@post.year </span>
            </a>
        </div>
        <div class="post-body">
            <div class="post-content">
                <h2 class="post-title">
                    <a href="@post.url">@post.title_cn</a>
                </h2>
                <div class="rich-content">
                    @post.content
                </div>
            </div>
            <div class="post-extra clearfix">
                <div class="post-link-wrap">
                    <a class="post-plink" href="@post.url?#disqus_thread"> 热度</a>
                    <span class="pipe">|</span>
                    <a class="post-plink" href="@post.url">全文链接</a>
                </div>
            </div>
            <div class="post-note">
            </div>
        </div>
    </div>
    <div id="pagination" class="normal-pagination">
        <a href="@ViewData["last_post_url"]" id="pager-prev" alt="{{post.last_title}}">@ViewData["last_post_text"]</a>
        <a href="@ViewData["next_post_url"]" id="pager-next" alt="{{post.last_title}}">@ViewData["next_post_text"]</a>
    </div>
    <div id="disqus_thread" style='margin: 0 0 20px 192px;width: 742px;'></div>
</div>